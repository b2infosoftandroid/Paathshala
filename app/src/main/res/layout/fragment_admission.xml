<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/institute_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="fonts/Roboto_Medium.ttf"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/dashboard_institute_name"
                android:textSize="@dimen/text_view_main_font_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_classmates"
                        android:layout_width="160dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@color/dashboard_fees_layout_top"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/dashboard_classmates"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/image_fees_selector" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/dashboard_fees"
                                android:textAllCaps="true"
                                android:textColor="@color/button_foreground"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/dashboard_fees_layout_bottom"></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_attendance"
                        android:layout_width="160dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@color/dashboard_marksheet_layout_top"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/dashboard_attendance"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/image_marksheet_selector" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/dashboard_marksheet"
                                android:textAllCaps="true"
                                android:textColor="@color/button_foreground"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/dashboard_marksheet_layout_bottom"></LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_holidays"
                        android:layout_width="160dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@color/dashboard_attandance_layout_top"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/dashboard_holidays"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/image_attendance_selector"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/dashboard_attandence"
                                android:textAllCaps="true"
                                android:textColor="@color/button_foreground"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/dashboard_attandance_layout_bottom"></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_fees"
                        android:layout_width="160dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@color/dashboard_complaint_layout_top"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/dashboard_fees"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/image_complaint_selector" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/dashboard_complaint"
                                android:textAllCaps="true"
                                android:textColor="@color/button_foreground"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/dashboard_complaint_layout_bottom"></LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/last_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="fonts/Roboto_Medium.ttf"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/data_last_updated"
                android:textAllCaps="false"
                android:textColor="@color/dashboard_institute_name"
                android:textSize="@dimen/text_view_font_size" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
