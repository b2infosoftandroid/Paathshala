<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/complaint_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="@string/complaint_subject"
                android:inputType="text"
                android:lines="1"
                android:paddingBottom="@dimen/edit_text_bottom_padding"
                android:paddingLeft="@dimen/edit_text_left_padding"
                android:paddingRight="@dimen/edit_text_right_padding"
                android:paddingTop="@dimen/edit_text_top_padding"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColorHint="@color/edit_text_hint_foreground" />

            <EditText
                android:id="@+id/complaint_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_text_top_margin"
                android:background="@drawable/edit_text_border"
                android:gravity="top|left"
                android:hint="@string/complaint_message"
                android:inputType="textMultiLine"
                android:lines="5"
                android:paddingBottom="@dimen/edit_text_bottom_padding"
                android:paddingLeft="@dimen/edit_text_left_padding"
                android:paddingRight="@dimen/edit_text_right_padding"
                android:paddingTop="@dimen/edit_text_top_padding"
                android:singleLine="false"
                android:textAllCaps="true"
                android:textColorHint="@color/edit_text_hint_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/complaint_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:layout_marginRight="@dimen/button_right_margin"
                    android:layout_marginTop="@dimen/button_top_margin"
                    android:layout_marginBottom="@dimen/button_bottom_margin"
                    android:background="@drawable/button_fill_background"
                    android:text="@string/cancel_complaint"
                    android:textAllCaps="true"
                    android:textColor="@color/button_foreground"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/complaint_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/button_right_margin"
                    android:layout_marginTop="@dimen/button_top_margin"
                    android:layout_marginBottom="@dimen/button_bottom_margin"
                    android:background="@drawable/button_fill_background"
                    android:text="@string/submit_complaint"
                    android:textAllCaps="true"
                    android:textColor="@color/button_foreground"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>